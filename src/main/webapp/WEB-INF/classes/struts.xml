<?xml version="1.0" encoding = "UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"       
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default" namespace="/">

		<action name="login" class="com.nixsolutions.emelianov.actions.ActionLogin">
			<result name="success">/homepage.jsp</result>
			<result name="input">/login.jsp</result>
		</action>

		<action name="register" class="com.nixsolutions.emelianov.actions.ActionRegister">
			<result name="success">/login.jsp</result>
			<result name="input">/registration.jsp</result>
		</action>
		
		<action name="delete" class="com.nixsolutions.emelianov.actions.ActionDelete">
            <result name="success">/homepage.jsp</result>
        </action>
        
        <action name="addEdit" class="com.nixsolutions.emelianov.actions.ActionAddEditPage">
            <result name="success">/add_edit.jsp</result>
        </action>
        
         <action name="addEditUser" class="com.nixsolutions.emelianov.actions.ActionAddEditUser">
            <result name="success">/homepage.jsp</result>
            <result name="input">/add_edit.jsp</result>
        </action>
        
        <action name="homepage" class="com.nixsolutions.emelianov.actions.ActionHomepage">
            <result name="success">/homepage.jsp</result>
        </action>

	</package>

</struts>
